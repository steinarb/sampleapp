    <feature name="${karaf-feature-name}">
        <feature>scr</feature>
    </feature>
    <feature name="sampleapp-db-production" description="sampleapp production DataSource" version="${project.version}">
        <config name="org.ops4j.datasource-sampleapp-production">
            osgi.jdbc.driver.name=PostgreSQL JDBC Driver
            dataSourceName=jdbc/sampleapp
            url=jdbc:postgresql:///sampleapp
            user=karaf
            password=karaf
            ops4j.preHook=sampleappdb
        </config>
        <capability>
            osgi.service;objectClass=javax.sql.DataSource;effective:=active;osgi.jndi.service.name=jdbc/sampleapp
        </capability>
        <feature>${karaf-feature-name}</feature>
        <feature>pax-jdbc-config</feature>
        <feature>postgresql</feature>
    </feature>
</features>
